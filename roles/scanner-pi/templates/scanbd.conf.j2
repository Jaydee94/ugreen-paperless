/*
 * scanbd configuration file
 */

global {
    debug   = true
    debug-level = 2
    user    = "root"
    group   = "root"
    saned   = "/usr/sbin/saned"
    saned_env  = "SANE_CONFIG_DIR=/etc/sane.d"
    scriptdir = "/etc/scanbd/scripts"
    
    # Timeout in ms
    timeout = 500
    
    pidfile = "/var/run/scanbd.pid"
    
    # Environment variables
    # (Removed unsupported mappings for this version)

    # Multiple actions
    action scan {
        filter = "^scan.*"
        desc   = "Scan to file"
        # script must be relative to scriptdir
        script = "scan_button.sh"
    }
}
