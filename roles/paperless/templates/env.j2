PAPERLESS_REDIS=redis://broker:6379/0
PAPERLESS_DBENGINE=django.db.backends.postgresql
PAPERLESS_DBNAME={{ paperless_db_name }}
PAPERLESS_DBUSER={{ paperless_db_user }}
PAPERLESS_DBPASS={{ paperless_db_password }}
PAPERLESS_DBHOST=db
PAPERLESS_DBPORT=5432

# User mapping for permission fix
USERMAP_UID={{ paperless_uid }}
USERMAP_GID={{ paperless_gid }}

# media and data paths inside container
PAPERLESS_MEDIA_ROOT=/usr/src/paperless/media
PAPERLESS_DATA_DIR=/usr/src/paperless/data

# Import directory for new documents
PAPERLESS_CONSUMPTION_DIR=/usr/src/paperless/data/drive-scans

# Enable recursive import from subdirectories
PAPERLESS_CONSUMER_RECURSIVE=true

# Predefine Paperless admin user (set these in your vars or vault)
PAPERLESS_ADMIN_USER={{ paperless_admin_user | default('admin') }}
PAPERLESS_ADMIN_PASSWORD={{ paperless_admin_password | default('admin') }}
PAPERLESS_ADMIN_EMAIL={{ paperless_admin_email | default('admin@example.com') }}
